14.Write a program  to remove the duplicates in an array .
#include <stdio.h>

int main() {
   int n;
   scanf("%d",&n);
   int arr[n];
   for(int i=0;i<n;i++)
   scanf("%d",&arr[i]);
   for(int i=0;i<n;i++)
  {
      for(int j=i+1;j<n;j++)
      {
      if(arr[i]==arr[j])
      {
           for(int k=j;k<n;k++){
              arr[k]=arr[k+1];}
          n--;
      }
  }
  }
   for(int i=0;i<n;i++)
    printf("%d ",arr[i]);
    return 0;
}
-------------------------------------------------------------------------------------------------------------------------
15.Write a program  to find second largest and second smallest in array
#include <stdio.h>

int main() {
   int n,temp;
   scanf("%d",&n);
   int arr[n];
   for(int i=0;i<n;i++)
   scanf("%d",&arr[i]);
   for(int i=1;i<n;i++)
  {
      for(int j=0;j<n-1;j++)
      {
      if(arr[j]>arr[j+1])
      {
         temp=arr[j+1];
         arr[j+1]=arr[j];
         arr[j]=temp;
      }
  }
  }
   for(int i=0;i<n;i++)
    printf("%d ",arr[i]);
    return 0;
}
